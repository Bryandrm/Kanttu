generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}



model Compra {
  id             Int      @id @default(autoincrement())
  descripcion    String
  monto          Float
  fecha          DateTime @default(now())
  categoria      String?
  metodoRegistro String?  // manual / escaneo
  usuarioId      Int      // Referencia al Usuario
  grupoId        Int?     // (opcional) Referencia a Grupo
}